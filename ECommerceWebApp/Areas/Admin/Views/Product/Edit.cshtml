@model EditProductViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="card card-body">
    <div class="card-title mt-4">
        <h2>Edit Product</h2>
    </div>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-for="CategoryId" class="form-select ps-4">
                @foreach(var item in Model.Categories)
                {
                    @if (Model.CategoryId == item.Id)
                    {
                        <option class="option" value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option class="option" value="@item.Id">@item.Name</option>
                    }
                }
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </select>
        </div>
         <div class="my-3">
            <label asp-for="DiscountId" class="form-label"></label>
            <select asp-for="DiscountId" class="form-select ps-4">
                <option value="0">none</option>
                @if(Model.Discounts!=null)
                {
                    @foreach(var item in Model.Discounts)
                    {
                        @if (Model.DiscountId == item.Id)
                        {
                            <option class="option" value="@item.Id" selected>@item.Value% from @item.Start to @item.End</option>
                        }
                        else
                        {
                            <option class="option" value="@item.Id">@item.Value% From @item.Start To @item.End</option>
                        }
                    }
                }
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </select>
        </div>
        <div class="my-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" style="height:100px"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input type="submit" class="btn btn-primary rounded float-end mb-4" value="Update"/>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
