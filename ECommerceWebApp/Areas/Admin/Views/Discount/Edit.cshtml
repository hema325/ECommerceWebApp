@model EditDiscountViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="card card-body">
    <div class="card-title mt-4">
        <h2>Edit Discount</h2>
    </div>

    <form asp-action="Edit" class="mb-4">
        <input asp-for="Id" hidden/>
        <div class="my-3">
            <label asp-for="Value" class="form-label"></label>
            <div class="input-group">
                <input asp-for="Value" class="form-control" />
                <span class="input-group-text">%</span>
            </div>
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="Start" class="form-label"></label>
            <input asp-for="Start" class="form-control" placeholder="name" />
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="End" class="form-label"></label>
            <input asp-for="End" class="form-control" placeholder="name" />
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input type="submit" class="btn btn-primary rounded float-end" value="Update"/>
        </div>
    </form>
</div>


@section Scripts
{
    <partial name="/Views/Shared/_ValidationScriptsPartial.cshtml" />
}

