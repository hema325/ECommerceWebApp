@model EditCategoryViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="card card-body">
    <div class="card-title mt-4">
        <h2>Edit Category</h2>
    </div>

    <form asp-action="Edit">
        <input asp-for="Id" hidden />
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="ParentId" class="form-label"></label>
            <select asp-for="ParentId" class="form-select ps-4">
                <option value="0">none</option>
                @foreach(var item in Model.Categories)
                {
                    @if (Model.ParentId == item.Id)
                    {
                        <option class="option" value="@item.Id" selected>@item.Name</option>
                    }
                    else if(Model.Id != item.Id)
                    {
                        <option class="option" value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </div>
        <div class="mt-3">
            <input type="submit" class="btn btn-primary rounded float-end mb-4" value="Update"/>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
