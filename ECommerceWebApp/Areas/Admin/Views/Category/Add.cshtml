@model AddCategoryViewModel
@{
    ViewData["Title"] = "Add";
}

<div class="card card-body">
    <div class="card-title mt-4" >
        <h2>Add Category</h2>
    </div>
    
    <form asp-action="Add">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="ParentId" class="form-label"></label>
            <select asp-for="ParentId" asp-items="@Model.Categories" class="form-select ps-4" >
                <option disabled selected>Select</option>
            </select>
        </div>
        <div class="float-end mt-3">
            <input type="submit" class="btn btn-primary rounded mb-4" value="Add"/>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
