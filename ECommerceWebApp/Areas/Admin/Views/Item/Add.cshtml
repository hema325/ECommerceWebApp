@model AddItemViewModel
@{
    ViewData["Title"] = "Add";
    var returnUrl = Context.Request.Path + Context.Request.QueryString.Value;
}

<div class="card card-body">
    <div class="card-title mt-4">
        <h2>Add Item</h2>
    </div>

    <form asp-action="Add" asp-route-returnUrl="@returnUrl" enctype="multipart/form-data" class="mb-4">
        <div class="my-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" placeholder="name" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" placeholder="name" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="ProductId" class="form-label"></label>
            <select asp-for="ProductId" asp-items="@Model.Products" class="form-select ps-4">
                <option disabled selected>--Select--</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="Image" class="form-label"></label>
            <input asp-for="Image" class="form-control p-2" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input type="submit" class="btn btn-primary rounded float-end" value="Add"/>
        </div>
    </form>
</div>


@section Scripts
{
    <partial name="/Views/Shared/_ValidationScriptsPartial.cshtml" />
}

