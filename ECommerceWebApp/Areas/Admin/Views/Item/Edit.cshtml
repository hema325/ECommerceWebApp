@model EditItemViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="card card-body">
    <div class="card-title mt-4">
        <h2>Edit Item</h2>
    </div>

    <form asp-action="Edit" enctype="multipart/form-data" class="mb-4">
        <input asp-for="Id" hidden/>
        <input asp-for="ImgUrl" hidden />
        <div class="my-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" placeholder="name" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" placeholder="name" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="ProductId" class="form-label"></label>
            <select asp-for="ProductId" class="form-select ps-4">
                @foreach(var product in Model.Products)
                {
                    @if(product.Id == Model.ProductId)
                    {
                        <option value="@product.Id" selected>@product.Name</option>
                    }
                    else
                    {
                        <option value="@product.Id">@product.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="Image" class="form-label"></label>
            <input asp-for="Image" class="form-control p-2" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input type="submit" class="btn btn-primary rounded float-end" value="Update"/>
        </div>
    </form>
</div>


@section Scripts
{
    <partial name="/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
