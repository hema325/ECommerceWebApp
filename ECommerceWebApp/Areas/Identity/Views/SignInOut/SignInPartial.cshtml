@model SignInViewModel

<div class="modal fade" id="signInModal">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Sign In</h5>
            </div>
            <div class="modal-body">
                <form asp-area="Identity" asp-controller="SignInOut" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                     <div class="my-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input">
                             <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="mt-3">
                         <input type="submit" class="btn btn-primary" value="SignIn"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer d-block">
                <div class="">
                    <a asp-area="Identity" asp-controller="SignInOut" asp-action="ExternalSignIn" asp-route-provider="Facebook" asp-route-returnUrl="@Context.Request.Path" class="link">Sign In Using Facebook</a>
                </div>
                <div class="">
                    <a class="link" data-bs-toggle="modal" id="forgotPassword" data-bs-target="#verificationModal">Forgot your Password ?</a>
                </div>
                <div class="">
                    <a class="link" data-bs-toggle="modal" id="emailVerification" data-bs-target="#verificationModal">Send Email Verification</a>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="/Areas/Identity/Views/SignInOut/SendVerificationPartial.cshtml" model="null"/>
