@model SendVerificationViewModel

<div class="modal fade" id="verificationModal">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Send Verification</h5>
            </div>
            <div class="modal-body">
                <form asp-area="Identity" asp-controller="SignInOut" asp-action="SendVerification">
                    <input asp-for="Purpose" hidden readonly/>
                    <div class="my-3">
                        <label asp-for="Email" class="form-label">Enter Your Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="my-3 d-flex gap-3">
                        <div class="">
                            <label asp-for="Method" class="form-label"></label>
                        </div>
                        <div class="flex-grow-1">
                             <div class="my-1 form-check">
                                 <input type="radio" asp-for="Method" id="email" class="form-check-input" value="@SendVerificationViewModel.Methods.Email"/>
                                 <label for="email" class="form-label">Email</label>
                             </div>
                             <div class="my-1 form-check">
                                 <input type="radio" asp-for="Method" id="phoneNumber" class="form-check-input" value="@SendVerificationViewModel.Methods.PhoneNumber"/>
                                 <label for="phoneNumber" class="form-label">Phone Number</label>
                             </div>
                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary me-2" data-bs-toggle="modal" data-bs-target="#signInModal">Back</button>
                        <input type="submit" value="Continue" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


