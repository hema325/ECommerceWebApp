@model ChangeImageViewModel

@{
    var returnUrl = Context.Request.Path + Context.Request.QueryString .ToString();
}

<div class="modal fade" id="ChangeImageModal">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Change Image</h5>
            </div>
            <div class="modal-body">
                <form asp-area="Identity" enctype="multipart/form-data" asp-controller="Account" asp-action="ChangeImage" asp-route-returnUrl="@returnUrl">
                    <div class="mb-3">
                        <label asp-for="Image" class="form-label"></label>
                        <input asp-for="Image" class="form-control"/>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="mt-3 d-flex justify-content-end gap-2">
                        <input type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#settingsModal" value="Back"/>
                        <input type="submit" class="btn btn-primary" value="Change" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
